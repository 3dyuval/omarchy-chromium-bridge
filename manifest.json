{
  "manifest_version": 3,
  "name": "Omarchy Theme",
  "version": "1.0.0",
  "description": "Applies omarchy theme colors to GitHub, GitLab, and other git sites",
  "permissions": ["storage", "alarms", "nativeMessaging"],
  "content_scripts": [{
    "matches": [
      "*://github.com/*",
      "*://gitlab.com/*",
      "*://codeberg.org/*",
      "*://bitbucket.org/*",
      "*://*/*.md"
    ],
    "js": ["content.js"],
    "run_at": "document_idle"
  }],
  "background": { "service_worker": "background.js" },
  "action": {
    "default_popup": "popup.html",
    "default_icon": { "48": "icons/icon48.png" }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
